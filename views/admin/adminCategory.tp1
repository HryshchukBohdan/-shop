<center><h2>Категории</h2></center>

<table border="1" cellpadding="1" cellspacing="1">
	<tr>
		<td>№</td>
		<td>ID</td>
		<td>Название</td>
		<td>Родитнльськая категория</td>
		<td>Действия</td>
	</tr>

{% for cat in categories %}
	<tr>
		<td>{{ loop.index }}</td>
		<td>{{ cat.id }}</td>
		<td>
			<input type="edit" id="MC_{{ cat.id }}" value="{{ cat.name }}" />
		</td>
		<td>
			<select id="parentId_{{ cat.id }}">
				<option value="0">Главная категория

				{% for mc in mainCat %}

				<option value="{{ mc.id }}" {% if cat.parent_id == mc.id %} selected {% endif %}>{{ mc.name }}

				{% endfor %}
			</select>
		</td>
		<td>
			<input type="button" value="Сохранить" onclick="updateCat({{ cat.id }});" />
		</td>
	</tr>

{% endfor %}

</table>






{% if arrayUser is not null %}

	{% set buttonClass = "" %}

	<h2>Данные заказчика</h2>
	<div id="orderUserInfoBox" {{ buttonClass }}>

		{% set name = arrayUser.name %}
		{% set phone = arrayUser.phone %}
		{% set adress = arrayUser.adress %}
		<table>
			<tr>
				<td>Имя*</td>
				<td>
					<input type="text" name="name" id="name" value="{{ name }}" />
				</td>
			</tr>
			<tr>
				<td>Телефон*</td>
				<td>
					<input type="text" name="phone" id="phone" value="{{ phone }}" />
				</td>
			</tr>
			<tr>
				<td>Адрес*</td>
				<td>
					<textarea name="adress" id="adress">{{ name }}</textarea>
				</td>
			</tr>
		</table>
	</div>

{% else %}

	<div id="loginBox">
